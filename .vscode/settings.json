{

  // === EDITOR NASTAVENIA PRE LEPŠIU ČITATEĽNOSŤ ===
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 100,
  "editor.rulers": [80, 100, 120],
  "editor.fontSize": 14,
  // Možné nastavenia veľkosti písma pre rôzne časti VS Code (zakomentované pre testovanie):
  // "window.zoomLevel": 0,  // Celkové priblíženie okna (ovplyvňuje aj chat panel a sidebar)
  // "editor.fontSize": 16,  // Alternatívna veľkosť pre editor
  // "terminal.integrated.fontSize": 18,  // Veľkosť písma v termináli (môže ovplyvniť podobné panely)
  // "workbench.fontSize": 14,  // Hypotetické nastavenie pre workbench/UI (nie vždy podporované)
  // Poznámka: Chat panel a sidebar často používajú "window.zoomLevel"
  "editor.lineHeight": 1.3,
  "editor.letterSpacing": 0.5,
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.scrollbar.verticalScrollbarSize": 10,
  "editor.scrollbar.horizontalScrollbarSize": 10,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.renderWhitespace": "selection",
  "editor.renderControlCharacters": true,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.formatOnSave": true,
//   "editor.defaultFormatter": "esbenp.prettier-vscode",

  // === ČÍSLA RIADKOV NASTAVENIA ===
  "editor.lineNumbers": "on",
  "editor.glyphMargin": true,
  "editor.folding": true,
  "editor.showFoldingControls": "mouseover",
  "editor.unfoldOnClickAfterEndOfLine": true,

  "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.scrollback": 1000,
"terminal.integrated.confirmOnExit": "never",
  "terminal.integrated.shellIntegration.enabled": true,

  "workbench.colorCustomizations": {
      // === TERMINAL FARBY ===
      "terminal.background": "#070113de",
      "terminal.foreground": "#b0c5c5",
      "terminalCursor.background": "#00ff40",
      "terminalCursor.foreground": "#be0404",
      "terminal.ansiBlack": "#001122",
      "terminal.ansiBlue": "#0066FF",
      "terminal.ansiBrightBlack": "#002244",
      "terminal.ansiBrightBlue": "#0088ff",
      "terminal.ansiBrightCyan": "#00CCFF",
      "terminal.ansiBrightGreen": "#00FF66",
      "terminal.ansiBrightMagenta": "#AA66FF",
      "terminal.ansiBrightRed": "#FF4444",
      "terminal.ansiBrightWhite": "#FFFFFF",
      "terminal.ansiBrightYellow": "#FFDD44",
      "terminal.ansiCyan": "#00aaffcd",
      "terminal.ansiGreen": "#00CC66",
      "terminal.ansiMagenta": "#8844FF",
      "terminal.ansiRed": "#DD2222",
      "terminal.ansiWhite": "#CCCCCC",
      "terminal.ansiYellow": "#FFBB22",

      // === EDITOR FARBY (kde píšeš) - SILNEJŠIA MODRÁ ===
      "editor.background": "#000000",
      "editor.foreground": "#e2130f",
      "editor.lineHighlightBackground": "#01567238",
      "editor.selectionBackground": "#003366",
      "editorCursor.foreground": "#00ffff",
      "editorWhitespace.foreground": "#004466",
      "editorIndentGuide.background": "#002244",
      "editorLineNumber.foreground": "#0066AA",
      "editorLineNumber.activeForeground": "#00AAFF",

      // === SIDEBAR & ACTIVITY BAR FARBY ===
      "sideBar.background": "#01122290",
      "sideBar.foreground": "#00CCFF",
      "sideBarSectionHeader.background": "#063d74",
      "activityBar.background": "#000022",
      "activityBar.foreground": "#00ffff",

      // === STATUS BAR & TABS ===
      "statusBar.background": "#001133",
      "statusBar.foreground": "#00ffdd",
      "statusBarItem.hoverBackground": "#002244",
      "titleBar.activeBackground": "#830383",
      "titleBar.activeForeground": "#00FFFF",
      "tab.activeBackground": "#57584898",
      "tab.activeForeground": "#ff00d4",
      "tab.inactiveBackground": "#000022",
      "tab.inactiveForeground": "#41cc00",
      "tab.hoverBackground": "#002244",

      // === PROBLEMS PANEL FARBY (problémy kódu) ===
      "problemsPanel.background": "#001122",
      "problemsPanel.foreground": "#00CCFF",
      "problemsPanel.border": "#002244",

      // === NOTIFICATIONS & PANELS ===
      "notifications.background": "#001122",
      "notifications.foreground": "#00ffdd",
      "panel.background": "#001122",
      "panel.border": "#002244",
      "panelTitle.activeForeground": "#00FFFF",
      "panelTitle.inactiveForeground": "#0088CC",

      // === FILE EXPLORER FARBY (strom súborov) - ZELENÁ ===
      "list.activeSelectionBackground": "#33000b",
      "list.activeSelectionForeground": "#eee7e8",
      "list.hoverBackground": "#002211",
      "list.inactiveSelectionBackground": "#70043a",
      "list.focusBackground": "#002211",
      "list.focusForeground": "#00FF66",
      "tree.indentGuidesStroke": "#00AA44",
      "tree.tableColumnsBorder": "#00AA44",

      // === CHAT/GPT PANEL FARBY - FIALOVÁ ===
      "chat.requestBackground": "#220033",
      "chat.requestBorder": "#440066",
      "chat.responseBackground": "#330044",
      "chat.responseBorder": "#550077",
      "chat.avatarBackground": "#440066",
      "chat.avatarForeground": "#FFAAFF",
      "chat.editingBackground": "#330033",
      "chat.editingBorder": "#550055",
      "chat.slashCommandBackground": "#440044",
      "chat.slashCommandForeground": "#FFAAFF"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
        {
            "scope": "keyword.control",
            "settings": {
                "foreground": "#6f00ff"
            }
        },
        {
            "scope": "string",
            "settings": {
                "foreground": "#ded00a"
            }
        },
        {
            "scope": "comment",
            "settings": {
                "foreground": "#70e60f",
                "fontStyle": "italic"
            }
        }
    ]
},
  "files.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/.vscode": false
  },
"accessibility.signals.terminalBell": {
    "sound": "off"
},
"terminal.integrated.enableVisualBell": false
}
